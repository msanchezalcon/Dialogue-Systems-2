<?xml version="1.0" encoding="utf-8"?>
<service_interface>

 <!-- query temperature with corresponding parameter-->
 <query name="temperature">
    <parameters>
    <parameter predicate="city_to_search" format="grammar_entry"/>
    <parameter predicate="country_to_search" format="grammar_entry"/>
  </parameters>
    <target>
      <device_module device="WeatherDevice"/>
    </target>
  </query>

 <!-- query weather with corresponding parameter-->
 <query name="weather">
    <parameters>
    <parameter predicate="city_to_search" format="grammar_entry"/>
    <parameter predicate="country_to_search" format="grammar_entry"/>
  </parameters>
    <target>
      <device_module device="WeatherDevice"/>
    </target>
  </query>

</service_interface>
